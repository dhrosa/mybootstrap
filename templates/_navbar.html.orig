<div class="navbar">
	<div class="navbar-inner">
	        <ul class="nav">
			<li><a class="icon-home" href="{{ SITEURL }}/index.html">Home</a></li>
			{% if DISPLAY_PAGES_ON_MENU %}
			<li class="dropdown">
				<a class="dropdown-toggle" data-toggle="dropdown" href="#">Pages <b class="caret"></b></a>
				<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
				{% for page in PAGES %}
					<li><a href="{{ SITEURL }}/{{ page.url }}">{{ page.title }}</a></li>
				{% endfor %}
				</ul>
			</li>			
			{% endif %}
			{% if DISPLAY_CATEGORIES_ON_MENU %} 
	                <li class="dropdown">
			 	<i class="icon-folder-open"> <a class="dropdown-toggle" data-toggle="dropdown" href="#">Categories <b class="caret"></b></a></i>
  				<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
				{% for cat, null in categories %}
					<li><a href="{{ SITEURL }}/{{ cat.url }}">{{ cat }}</a></li>
				{% endfor %}
				</ul>
			</li>
			{% endif %}
			{% if NAVBAR_PAGES %}
				{% for name, link, icon in NAVBAR_PAGES %}
					<li><i class="{{ icon }}"> <a href="{{ SITEURL }}/{{ link }}">{{ name }}</a></i></li>
				{% endfor %}
			{% endif %}
	        </ul>   
	</div>
</div>
